<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="860" prefWidth="1280" styleClass="chat-root"
            stylesheets="@styles.css" xmlns="http://javafx.com/javafx/25"
            fx:controller="se.mau.chifferchat.ui.ChatController">

    <!-- ============ TOP BAR ============ -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" styleClass="chat-topbar">
            <padding>
                <Insets bottom="10" left="20" right="20" top="10"/>
            </padding>

            <Label styleClass="chat-title" text="ðŸ’¬ ChifferChat"/>

            <Region HBox.hgrow="ALWAYS"/> <!-- pushes items to the right -->

            <Label fx:id="connectionStatus" styleClass="status-dot" text="ðŸ”´"/>
            <Label fx:id="clockLabel" styleClass="chat-clock" text="12:45"/>
            <Button fx:id="logoutButton" onAction="#onLogout" styleClass="button-danger" text="Logout"/>
        </HBox>
    </top>

    <!-- ============ LEFT SIDEBAR ============ -->
    <left>
        <VBox alignment="TOP_CENTER" spacing="10" styleClass="chat-sidebar">
            <padding>
                <Insets left="10" right="10" top="20"/>
            </padding>

            <Label styleClass="sidebar-title" text="Users"/>
            <ListView fx:id="userList" prefWidth="200" styleClass="user-list"/>

            <Region VBox.vgrow="ALWAYS"/> <!-- Spacer -->

            <HBox fx:id="userInfo" alignment="CENTER_LEFT" spacing="8" styleClass="sidebar-userinfo">
                <ImageView fx:id="userAvatar" fitHeight="32" fitWidth="32"/>
                <Label fx:id="usernameLabel" styleClass="username-label" text="You"/>
                <Region prefHeight="10.0" prefWidth="50.0" HBox.hgrow="ALWAYS"/>
            </HBox>
        </VBox>
    </left>

    <!-- ============ CENTER CHAT AREA ============ -->
    <center>
        <VBox styleClass="chat-center">
            <ListView fx:id="chatList" styleClass="chat-list" VBox.vgrow="ALWAYS"/>
        </VBox>
    </center>

    <!-- ============ BOTTOM INPUT BAR ============ -->
    <bottom>
        <HBox alignment="CENTER_LEFT" spacing="10" styleClass="chat-inputbar">
            <padding>
                <Insets bottom="10" left="20" right="20" top="10"/>
            </padding>

            <TextField fx:id="messageField" promptText="Type your message..." styleClass="text-field"
                       HBox.hgrow="ALWAYS"/>
            <Button fx:id="sendButton" styleClass="button, btn-primary" text="Send"/>
        </HBox>
    </bottom>
</BorderPane>
